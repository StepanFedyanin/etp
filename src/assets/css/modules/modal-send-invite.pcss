.modal-container {
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-content {
  display: inline-block;
  padding: 1rem;
  border: 1px solid #e2e8f0;
  border-radius: 0.25rem;
  background: #fff;
}
.modal__title {
  font-size: 1.5rem;
  font-weight: 700;
}
.dark-mode .modal-content {
  border-color: #2d3748;
  background-color: #1a202c;
}
.modal__close {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
}