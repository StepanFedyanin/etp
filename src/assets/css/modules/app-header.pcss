    &__popup {
        position: absolute;
        top: 100%;
        right: 0;
        margin-top: 0;
        background: $color-bg;
        max-width: 450px;
        min-width: 365px;

        @mixin responsive-le-m {
            width: 450px;
        }

        @mixin responsive-le-s {
            margin-top: 52px;
            right: -16px;
        }

        @mixin responsive-le-xs {
            width: 90vw;
        }

        &-body {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            padding: 1.5rem;
        }

        &-menu {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
            padding-left: 0.5rem;
            border-left: 1px solid rgba($color-green, 0.2);


            &-item {
                font-weight: 500;
                font-size: 0.875rem;
                line-height: normal;

                &.m--title {
                    color: $color-gray-66;
                    text-transform: uppercase;    
                }
            }

            &-link {
                display: block;
                color: $color-gray-T1;
                text-decoration: none;
                font-weight: 500;
                cursor: pointer;
                transition: color 0.5s ease;

                &:hover,
                &.is-active {
                    color: $color-green;
                }
            }

            &-item.m--icon &-link {
                position: relative;
                padding-left: 1.5rem;

                &:before {
                    content: '';
                    position: absolute;
                    top: 50%;
                    left: 0;
                    transform: translateY(-50%);
                    width: 1rem;
                    height: 1rem;
                    background-size: contain;
                    background-position: 50% 50%;
                    background-repeat: no-repeat;
                }
            }

            &-item.m--tugan &-link {
                padding-left: 0;
                padding-right: 1.5rem;

                &:before {
                    background-image: url('assets/img/icons/icon-list.svg');
                    left: auto;
                    right: 0;
                }
            }
        }
    }
}


