    */
    &.m--seconds {
        position: relative;
        top: auto;
        left: auto;
        background-image: url('./assets/img/bg/header_seconds.png');
    }
    &.m--cabinet {
        position: relative;
        top: auto;
        left: auto;
        background: none;
        overflow-x: clip;
    }
    &__content {
        /*position: relative;*/
        display: flex;
        justify-content: space-between;
        padding: 1rem 0;
        height: 100px;

        @mixin responsive-le-l {
            padding: 0.5rem 0;
        }

        @mixin responsive-le-s {
            flex-direction: column-reverse;
        }
    }

    &__left,
    &__right {
        display: flex;
        align-items: center;
        @mixin responsive-le-l {
            gap: 12px;
        }
    }

    &__left {
        position: relative;
        gap: 48px;
        flex-grow: 1;

        @mixin responsive-le-xl {
            gap: 24px;
        }

        @mixin responsive-le-m {
            flex-direction: column;
            gap: 0;
            height: 100%;
            justify-content: space-around;
        }
    }

    &__right {
        gap: 2rem;
        width: 300px;
        min-width: 300px;
        justify-content: flex-end;

        @mixin responsive-le-xl {
            width: 264px;
            min-width: 264px;
            gap: 1rem;
        }

        @mixin responsive-le-l {
            width: 224px;
            min-width: 224px;
        }

        @mixin responsive-le-m {
            width: auto;
            min-width: auto;
        }

        @mixin responsive-le-s {
            position: absolute;
            top: 8px;
            right: 16px;
            gap: 0;
        }
    }

    &__burger {
        display: none;
    }

    &.m--cabinet &__burger {
        display: none;
        width: 2.5rem;
        height: 2.5rem;
        background-color: $color-green;
        -webkit-mask-position: center;
        mask-position: center;
        -webkit-mask-repeat: no-repeat;
        mask-repeat: no-repeat;
        -webkit-mask-size: contain;
        mask-size: contain;
        -webkit-mask-image: url('./assets/img/icons/icon-burger.svg');
        mask-image: url('./assets/img/icons/icon-burger.svg');

        &:hover,
        &.is-active {
            background-color: $color-red;
        }

        @mixin responsive-le-m {
            position: absolute;
            display: block;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
        }

        @mixin responsive-le-s {
            position: absolute;
            top: 0;
            transform: translateY(0%);
        }

        @mixin responsive-le-xs {
        }
    }

    &__logo {
        width: 300px;
        padding: 0 30px;

        @mixin responsive-le-xl {
            width: 240px;
            padding: 0;
        }

        @mixin responsive-le-l {
            width: 200px;
        }

        @mixin responsive-le-m {
            width: 160px;
        }

        @mixin responsive-le-s {
            /* margin-right: auto; */
        }

        @mixin responsive-le-xs {
            width: 150px;
        }

        &-link,
        &-img {
            width: 100%;
        }
    }

    &.m--cabinet &__logo {
        @mixin responsive-le-s {
            margin-left: auto;
            margin-right: auto;
        }
    }

    &__contacts {
        @mixin responsive-le-m {
            display: none;
        }
    }

    &.m--cabinet &__contacts {
        &-phone {
            color: $color-black;
            &:hover,
            &.is-active {
                color: $color-green !important;
            }
        }

        &-email {
            color: $color-black;
            &:hover,
            &.is-active {
                color: $color-green !important;
            }
        }
    }

    &__timer {
        text-align: right;

        @mixin responsive-le-m {
            display: none;
        }

        &-time,
        &-date {
            position: relative;
            display: block;
            padding-right: 32px;

            &:before {
                content: '';
                position: absolute;
                top: 50%;
                right: 0;
                margin-top: -10px;
                width: 20px;
                height: 20px;
            }
        }

        &-time {
            @mixin header-link;
            margin-bottom: 8px;
            &:before {
                background: url('./assets/img/icons/icon-timer-time.svg') 50% 50% no-repeat;
                background-size: 100% 100%;
            }
        }

        &-date {
            @mixin header-link;
            margin-bottom: 0 !important;
            &:before {
                background: url('./assets/img/icons/icon-timer-date.svg') 50% 50% no-repeat;
                background-size: 100% 100%;
            }
        }
    }

    &.m--cabinet &__timer {
        &-time {
            color: $color-black;
        }

        &-date {
            color: $color-black;
        }
    }

    &__menu {
        display: flex;
        /*gap: 2.5rem;*/
        padding: 0;
        /*margin: 0 12px 0 0;*/
        margin: 0 auto;
        list-style: none;

        @mixin responsive-le-l {
            /*gap: 1rem;*/
        }

        @mixin responsive-le-s {
            width: 100%;
            justify-content: center;
            /*margin-right: 0;*/
        }

        &-item {
            position: relative;
            margin: 0;
            display: flex;
            align-items: center;

            @mixin responsive-le-s {
                /*margin: 0;*/
            }

            @mixin responsive-le-xs {
                text-align: center;
            }
        }

        &-link {
            @mixin header-link;

            &:before {
                content: '';
                position: absolute;
                top: 100%;
                margin-top: 0.125rem;
                left: 0;
                right: 0;
                border-bottom: 2px solid rgba($color-white, 0.2);
                transition: border 0.5s ease;
            }

            &:hover,
            &.is-active {
                &:before {
                    border-bottom: 2px solid rgba($color-white, 1);
                }
            }
        }
    }

    &.m--cabinet &__menu {
        &-link {
            color: $color-black;

            &:hover,
            &.is-active {
                color: $color-green !important;
            }

            &:before {
                content: '';
                position: absolute;
                top: 100%;
                margin-top: 0.125rem;
                left: 0;
                right: 0;
                border-bottom: 2px solid rgba($color-green, 0.2);
                transition: border 0.5s ease;
            }

            &:hover,
            &.is-active {
                &:before {
                    border-bottom: 2px solid rgba($color-green, 1);
                }
            }
        }

        @mixin responsive-le-s {
            width: 100%;
            justify-content: center;
        }
    }

    &__login {
        width: 150px;
        height: 60px;

        @mixin responsive-le-l {
            width: 90px;
            height: 40px;
            font-size: 16px;
        }

        @mixin responsive-le-m {
            width: 90px;
            font-size: 14px;
        }
    }

    &__info {
        font-size: 0.875rem;
        max-width: 196px;
        white-space: nowrap;
        cursor: pointer;

        @mixin responsive-le-l {
            display: none;
        }

        &-organization {
            font-weight: 500;
            color: $color-gray-T1;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        &-user {
            color: $color-gray-T3;
            overflow: hidden;
            text-overflow: ellipsis;
            font-weight: 400;

            span {
                display: block;
                font-weight: 500;
                color: $color-gray-T1;
            }
        }
    }

    &__user {
        width: 3.5rem;
        min-width: 3.5rem;
        height: 3.5rem;
        border: 2px solid $color-green;
        border-radius: 50%;
        overflow: hidden;
        /*padding: 2px;*/
        cursor: pointer;
        transition: all 0.5s ease;

        &:hover {
            border-color: $color-red;
        }

        &.m--no-logo {
            border: none;
            padding: 0;
            background-color: $color-red;
            -webkit-mask-position: center;
            mask-position: center;
            -webkit-mask-repeat: no-repeat;
            mask-repeat: no-repeat;
            -webkit-mask-size: contain;
            mask-size: contain;
            -webkit-mask-image: url('./assets/img/icons/icon-user.svg');
            mask-image: url('./assets/img/icons/icon-user.svg');

            &:hover,
            &.is-active {
                background-color: $color-green;
            }
        }

        @mixin responsive-le-m {
            width: 2.5rem;
            min-width: 2.5rem;
            height: 2.5rem;
        }

        img {
            display: block;
            width: 100%;
            height: 100%;
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
        }
    }

    &__contacts {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        gap: 0.5rem;
        z-index: 1;

        @mixin responsive-le-l {
            display: none;
        }

        &-link {
            position: relative;
            display: block;
            width: 100%;
            text-align: right;
            font-size: 1rem;
            line-height: 1.25rem;
            font-weight: 500;
            padding-left: 2rem;
            text-decoration: none;
            color: $color-gray-T1;

            &:hover {
                text-decoration: underline;
                color: $color-green;
            }

            &:before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 1.25rem;
                height: 1.25rem;
                background: $color-green;
            }

            &.m--phone:before {
                mask: url('./assets/img/icons/icon-phone.svg') 50% 50% no-repeat;
                mask-size: contain;
            }

            &.m--mail:before {
                mask: url('./assets/img/icons/icon-mail.svg') 50% 50% no-repeat;
                mask-size: contain;
            }
        }
    }

    &__sub {
        padding: 40px 0;
    }

    &__breadcrumbs {
        font-weight: 300;
        font-size: 12px;
        line-height: 15px;
        margin-bottom: 10px;

        a {
            position: relative;
            display: inline-block;
            color: $color-white;
            margin-bottom: 8px;

            &:after {
                content: '—';
                position: relative;
                display: inline-block;
                margin: 0 10px;
            }
        }
    }

    &__title {
        color: $color-white;
        margin-top: 0;
    }
