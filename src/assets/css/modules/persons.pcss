.persons {
    position: relative;
    overflow-x: auto;
    @mixin scrollbar $color-shadow, $color-green, 10px;

    &__item {
        padding: 8px 0;
        font-weight: 400;
        font-size: 16px;
        line-height: 20px;
        display: grid;
        grid-template-columns: 30px minmax(240px, auto) minmax(240px, auto) minmax(240px, 320px) 160px 52px;
        /*grid-template-areas: 'A B C D';*/
        gap: 10px;
        word-break: break-word;
        @mixin responsive-le-s {
            min-width: 780px;
        }

        &.m--header {
            padding: 0 0 16px;
            color: $color-gray-T3;
        }
        .svg-icon{
            margin:0;
            &:first-child{
                margin-right: 5px;
            }
        }

        &:not(.m--header):hover{
            background: #F9F9F9;
        }

        &.not_active{
            /* background: grey; */
            color: $color-gray-T4;
        }
    }
    .cell-icons{
        display: flex;
    }
}
